# Copy this file to .env and adjust values as needed for local development

# Database Configuration
DB_NAME=synapse_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_PORT=5432

# Server Configuration
SERVER_PORT=3000
NODE_ENV=development

# Client Configuration
CLIENT_PORT=5173

# Application URLs
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/synapse_dev
VITE_API_URL=http://localhost:3000

# Service Configuration
# Set to 'true' to use mock services for development (no API keys required)
USE_MOCK_SERVICES=true

# AIChat Service API Keys (optional - only needed if USE_MOCK_SERVICES=false)
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key
# GEMINI_API_KEY=your-gemini-api-key
# DEEPSEEK_API_KEY=your-deepseek-api-key

# GitHub Configuration (optional)
# GITHUB_TOKEN=your-github-token

# Azure Configuration (optional)
# AZURE_SUBSCRIPTION_ID=your-subscription-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret
# AZURE_TENANT_ID=your-tenant-id

# Kubernetes Configuration (optional)
# KUBECONFIG=/path/to/kubeconfig       # Path to kubeconfig file on the server
# KUBECONFIG_CONTENT=<yaml-content>    # Alternative: raw kubeconfig YAML content
# KUBE_CONTEXT=your-context            # Kubernetes context to use

# Optional: Override any settings for your local environment
# CLIENT_PORT=3001
# SERVER_PORT=3001

# Python Agents Service Configuration
AGENTS_SERVICE_URL=http://agents:8000
AGENTS_PORT=8000

# RAG Service Configuration
RAG_SERVICE_URL=http://rag-service:8080
RAG_SERVICE_API_KEY=your-rag-api-key
RAG_SERVICE_TIMEOUT=30000
