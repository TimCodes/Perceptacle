{
  "name": "github-manager-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "dev:client": "npm run dev --workspace=@github-manager/client",
    "dev:server": "npm run dev --workspace=@github-manager/server",
    "dev:core": "npm run dev --workspace=@github-manager/core",
    "build:client": "npm run build --workspace=@github-manager/client",
    "build:server": "npm run build --workspace=@github-manager/server",
    "build:core": "npm run build --workspace=@github-manager/core",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose up --build",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker-compose down -v --rmi all"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@replit/vite-plugin-runtime-error-modal": "^0.0.3",
    "@replit/vite-plugin-shadcn-theme-json": "^0.0.4",
    "cmdk": "^1.1.1",
    "framer-motion": "^12.23.6"
  }
}
