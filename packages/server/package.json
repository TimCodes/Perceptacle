{
  "name": "perceptacle-server",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend server for Perceptacle diagram builder",
  "main": "index.ts",
  "scripts": {
    "dev": "tsx index.ts",
    "start": "tsx index.ts",
    "build": "esbuild index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "check": "tsc --noEmit",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:mocks": "USE_MOCK_SERVICES=true tsx test-mocked-services.ts",
    "demo:aichat": "USE_MOCK_SERVICES=true tsx aichat-demo.ts"
  },
  "dependencies": {
    "@azure/arm-monitor": "^7.0.0",
    "@azure/arm-operationalinsights": "^9.0.0",
    "@azure/arm-resources": "^6.1.0",
    "@azure/arm-servicebus": "^6.1.0",
    "@azure/identity": "^4.10.1",
    "@azure/monitor-query": "^1.3.2",
    "@azure/monitor-query-logs": "^1.0.0",
    "@azure/monitor-query-metrics": "^1.0.0",
    "@azure/service-bus": "^7.9.5",
    "@kubernetes/client-node": "^1.4.0",
    "@langchain/anthropic": "^0.3.33",
    "@langchain/community": "^1.0.0",
    "@langchain/core": "^1.0.2",
    "@langchain/google-genai": "^1.0.0",
    "@langchain/openai": "^1.0.0",
    "@octokit/rest": "^21.1.1",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.38.2",
    "drizzle-zod": "^0.6.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "fuse.js": "^7.1.0",
    "helmet": "^7.1.0",
    "kafkajs": "^2.2.4",
    "memorystore": "^1.6.7",
    "mongodb": "^6.11.0",
    "openai": "^4.83.0",
    "postgres": "^3.4.7",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.14",
    "@types/node": "20.16.11",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.13",
    "drizzle-kit": "^0.27.1",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.1",
    "typescript": "5.6.3"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "express",
    "typescript",
    "server",
    "api",
    "websocket",
    "drizzle"
  ],
  "author": "TimCodes",
