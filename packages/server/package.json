{
  "name": "perceptacle-server",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend server for Perceptacle diagram builder",
  "main": "index.ts",
  "scripts": {
    "dev": "tsx index.ts",
    "start": "tsx index.ts",
    "build": "esbuild index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "check": "tsc --noEmit",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "memorystore": "^1.6.7",
    "ws": "^8.18.0",
    "drizzle-orm": "^0.38.2",
    "drizzle-zod": "^0.6.0",
    "zod": "^3.23.8",
    "openai": "^4.83.0",
    "date-fns": "^3.6.0",
    "fuse.js": "^7.1.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "20.16.11",
    "@types/ws": "^8.5.13",
    "@types/cors": "^2.8.17",
    "typescript": "5.6.3",
    "tsx": "^4.19.1",
    "esbuild": "^0.24.0",
    "drizzle-kit": "^0.27.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.2.5",
    "nodemon": "^3.1.4"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "express",
    "typescript",
    "server",
    "api",
    "websocket",
    "drizzle"
  ],
  "author": "TimCodes",
  "license": "MIT"
}
